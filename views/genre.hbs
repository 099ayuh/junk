{{> navbar}}
<div
    style="background: linear-gradient(rgba(24, 24, 24, 0.598), rgba(0, 0, 0, 1)); background-position:center; background-size: cover;">
    <div class="w-full h-auto flex flex-col items-center">
        <div class="md:w-[80%] w-full p-3 flex flex-row flex-wrap justify-center pt-3">
            {{#each DataAPI}}
            <a class="md:p-2 p-1" href="genre/{{this.id}}/{{this.name}}">
                <span
                    class="inline-block md:text-xl px-2 py-2 leading-none bg-orange-200 text-orange-800 rounded-lg font-semibold uppercase tracking-wide">{{this.name}}</span>
            </a>
            {{/each}}
        </div>
    </div>

    <div class="w-full flex flex-col items-center justify-center">
        <div class="md:w-[80%] w-[90%] p-5 bg-green-600">
            <h1 class="text-center font-mono font-semibold text-white">Welcome to my unofficial MovieMania website</h1>
        </div>
    </div>

    <div class="mt-5 w-full flex flex-col items-center justify-center -mb-2">
        <div class="md:w-full w-full p-3 bg-[#0d6efd]">
            <h1 class="text-start pl-3 font-mono font-semibold text-white">üî• Latest Movies</h1>
        </div>
    </div>

    <div class="z-10 w-full h-auto antialiased text-gray-900 font-sans p-6">
        <div class="container mx-auto">
            <div class="flex flex-wrap -mx-4">
                {{#each leatestMovies}}
                <div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/4 p-4">
                    <a href="/find/{{this.id}}"
                        class="c-card block bg-white shadow-md hover:shadow-xl rounded-lg overflow-hidden">
                        <div class="relative pb-[100%] card-zoom overflow-hidden object-cover">
                            {{#if poster_path}}
                            <img class="absolute inset-0 h-full w-full object-cover card-zoom-image"
                                src="https://image.tmdb.org/t/p/w1280{{this.poster_path}}" alt="">
                            {{else}}
                            <img class="absolute inset-0 h-full w-full object-cover card-zoom-image" src="img/error.jpg"
                                alt="">
                            {{/if}}

                        </div>
                        <div class="p-4">
                            <span
                                class="inline-block px-2 py-1 leading-none bg-orange-200 text-orange-800 rounded-full font-semibold uppercase tracking-wide text-xs">Latest
                                üî•</span>
                            <h2 class="mt-2 mb-2  font-bold">{{this.title}}</h2>
                            <p class="text-sm">{{this.overview}}</p>
                            <div class="mt-3 flex items-center bg-red-400  rounded w-fit p-1" title="IMDB Rating">
                                <span class="text-sm font-semibold">‚≠ê</span><span
                                    class="font-bold text-xl">{{this.vote_average}}</span>
                            </div>
                        </div>
                        <div class="p-4 border-t border-b text-xs text-gray-700">
                            <span class="flex items-center mb-1">
                                IMDB Votes :<i class="far fa-clock fa-fw mr-2 text-gray-900"></i>{{this.vote_count}}
                            </span>
                            <span class="flex items-center">
                                Popularity :
                                <i class="far fa-address-card fa-fw text-gray-900 mr-2"></i> {{this.popularity}}
                            </span>
                        </div>
